strong
  font-weight 700
  color #282c34

.theme-default-content pre, .theme-default-content pre[class*="language-"]
  padding 1.8rem 1.5rem 1.25rem

div[class*="language-"]::after,
pre[class*="language-"]::after,
pre[class*="language-"]::before
  content ''
  height 10px
  width 10px
  position absolute
  top 12px
  left 12px
  border-radius 50%
  display inline-block
  background #ff4742

pre[class*="language-"]::before
  left 27px
  background #b300eb

pre[class*="language-"]::after
  left 42px
  background #fcd019